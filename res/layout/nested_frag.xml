<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/nested_fragment" >
    <ImageButton android:id="@+id/image_button"
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:src="@drawable/octocat_class_act"/>
    <TextView android:text="This is some text"
              android:layout_height="wrap_content"
              android:layout_width="wrap_content" />
    <TextView android:text="This is a second TextView"
              android:layout_height="wrap_content"
              android:layout_width="wrap_content" />
    <TextClock android:layout_height="wrap_content"
               android:layout_width="wrap_content" />
</LinearLayout>